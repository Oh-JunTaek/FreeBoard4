<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FBActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FBActivity"
        tools:layout_editor_absoluteX="-204dp"
        tools:layout_editor_absoluteY="158dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_title_text_view"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/post_content_text_view"
                app:layout_constraintStart_toStartOf="@id/post_content_text_view"
                app:layout_constraintEnd_toEndOf="@id/post_content_text_view"
                />

            <TextView
                android:id="@+id/post_content_text_view"
                style="@style/TextAppearance.AppCompat.Medium"
                android:autoLink="all"
                android:fadingEdge="horizontal|vertical"
                android:maxLines="1000"
                android:textIsSelectable="true"
                android:textSize="16sp" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>